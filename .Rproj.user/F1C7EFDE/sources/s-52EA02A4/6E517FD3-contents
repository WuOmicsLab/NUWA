lambdas <- seq(0, 300, length.out = 1000)
alpha <- 0.1
plot(c(0,300), c(0, 1), xlab = "lambda", ylab = "P_see", type = 'n')
thetas <- c(2, 9, 15)
for (i in seq(3)) {
    theta <- thetas[i]
    totals <- 0
    for (k in 0 : (theta - 1)) {
        totals <- totals + exp(-lambdas*alpha)*(alpha*lambdas)^k/factorial(k)
    }
    p_sees <- 1-totals

    lines(lambdas, p_sees, lty = i)
}

legend("bottomright", lty = 1:3, legend = paste0("theta = ", thetas))





